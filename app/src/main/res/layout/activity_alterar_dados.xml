<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".Inicio">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alterando seus dados"
            android:textAlignment="center"
            android:textColor="#4C4949"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNome"
            style="@style/Edit_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="Nome Completo"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtDataNasc"
            style="@style/Edit_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:hint="Data de Nascimento"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtCelular"
            style="@style/Edit_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:hint="Número do celular"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtCadUsuario"
            style="@style/Edit_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:hint="Usuário"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtCadSenha"
            style="@style/Edit_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:hint="Senha"
            android:inputType="numberPassword"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSalvarModificacao"
            style="@style/Button"
            android:layout_marginTop="170dp"
            android:text="SALVAR MODIFICAÇÕES"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelar"
            style="@style/Button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="CANCELAR"
            app:cornerRadius="20dp" />



    </LinearLayout>
</androidx.core.widget.NestedScrollView>